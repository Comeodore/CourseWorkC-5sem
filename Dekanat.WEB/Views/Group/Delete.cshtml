@model Dekanat.WEB.Models.GroupViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Видалення групи: </h2>

<h3>Ви впевнені,що хочете видалити цю групу?</h3>
<div>
    <h4>Група:</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Назва групи:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayName("Кількість студентів:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount_of_students)
        </dd>

        <dt>
            @Html.DisplayName("Курс:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course)
        </dd>

        <dt>
            @Html.DisplayName("Факультет:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Faculty)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Назад до списку груп", "Index")
        </div>
    }
</div>
